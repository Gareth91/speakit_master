<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.allstate.speakitvisualcommunication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/player"
        android:label="@string/app_name"
        android:roundIcon="@drawable/player"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="project.allstate.speakitvisualcommunication.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="project.allstate.speakitvisualcommunication.SecondScreen" />
        <activity
            android:name="project.allstate.speakitvisualcommunication.ActionWords"
            android:theme="@style/AppTheme.CustomTheme2" />
        <activity android:name="project.allstate.speakitvisualcommunication.Uploader" />
        <activity android:name="project.allstate.speakitvisualcommunication.MainScreen" />
        <activity android:name="project.allstate.speakitvisualcommunication.CreateUser" />
        <activity android:name="project.allstate.speakitvisualcommunication.UserSelect" />
        <activity android:name="project.allstate.speakitvisualcommunication.LoginScreen" />
        <activity
            android:name="project.allstate.speakitvisualcommunication.ForgotPassword"
            android:parentActivityName="project.allstate.speakitvisualcommunication.LoginScreen" />
        <activity
            android:name="project.allstate.speakitvisualcommunication.RegisterActivity"
            android:parentActivityName="project.allstate.speakitvisualcommunication.LoginScreen" />
    </application>

</manifest>