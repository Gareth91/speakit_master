<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.Allstate.speakitvisualcommunication.Project.Allstate.speakitvisualcommunication.MainScreen">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_height="80dp"
        android:layout_width="535dp"
        android:paddingLeft="3dp"
        android:paddingTop="3dp"
        android:background="@drawable/sentence_builder_border"
        />

    <!--<ImageButton
        android:id="@+id/speakB"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/sentence_builder_border"
        android:src="@drawable/play"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/recyclerView" />-->

    <ImageButton
        android:id="@+id/deleteB"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/sentence_builder_border"
        android:src="@drawable/delete"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/recyclerView"
        android:layout_above="@+id/gridview"
        android:layout_alignParentTop="true" />

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="590dp"
        android:gravity="center"
        android:columnWidth="100dp"
        android:numColumns="3"
        android:verticalSpacing="15dp"
        android:horizontalSpacing="10dp"
        android:paddingTop="3dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:stretchMode="columnWidth"
        android:layout_below="@id/recyclerView"/>


</RelativeLayout>
