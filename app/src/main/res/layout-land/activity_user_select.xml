<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="project.allstate.speakitvisualcommunication.UserSelect">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Page"
        android:textSize="24sp"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toStartOf="@+id/imageView" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/seeyou"
        android:scaleType="fitXY"
        android:id="@+id/imageView"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select User"
        android:textSize="20sp"
        android:paddingLeft="3dp"
        android:id="@+id/textView2"
        android:layout_marginStart="17dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentStart="true" />

    <GridView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/user_select"
        android:id="@+id/userlistView"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="8dp"
        android:numColumns="3"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"></GridView>

    <Button
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Create User"
        android:id="@+id/buttonAddUser"
        android:background="@drawable/grid_cells_border"
        android:layout_marginEnd="16dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
