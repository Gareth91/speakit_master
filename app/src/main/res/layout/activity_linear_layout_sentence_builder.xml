<!-- Layout to create the items within the sentence builder -->
<!-- Created by Gareth Moore -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="68dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2.5dp"
    android:layout_marginTop="6.8dp"
    android:gravity="center"
    android:background="@drawable/grid_cells_sentence">

    <!-- Shows the word of the item -->
    <TextView
        android:id="@+id/wordText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="1dp"/>

    <!-- Layout in which the image of the word is shown -->
    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp">

        <!-- View used to show the image of the word -->
        <ImageView
            android:id="@+id/imageview3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:scaleType="fitXY" />
    </FrameLayout>

</LinearLayout>